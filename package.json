  "devDependencies": {
    "@types/chai": "^4.0.1",
    "@types/mocha": "^2.2.41",
    "@types/node": "^8.0.8",
    "@types/webpack": "^3.0.1",
    "chai": "^4.0.2",
    "core-js": "^2.4.1",
    "istanbul-instrumenter-loader": "^2.0.0",
    "karma": "^1.7.0",
